<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/text_shelf"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="货架："
        app:layout_constraintStart_toStartOf="@+id/text_amount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_position"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/text_amount"
        app:layout_constraintTop_toTopOf="@+id/text_shelf"
        android:gravity="center"
        style="@style/Widget.AppCompat.EditText"
        android:text="货位："/>

    <TextView
        android:id="@+id/text_amount"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="待退货数量："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_shelf" />

    <EditText
        android:id="@+id/edit_amount"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_amount"
        android:gravity="center"
        android:hint="请输入实际退货数量"/>

</androidx.constraintlayout.widget.ConstraintLayout>